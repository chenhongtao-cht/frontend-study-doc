#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/f/study-frontend/frontend-notes/node_modules/needle/bin/node_modules:/mnt/f/study-frontend/frontend-notes/node_modules/needle/node_modules:/mnt/f/study-frontend/frontend-notes/node_modules:/mnt/f/study-frontend/node_modules:/mnt/f/node_modules:/mnt/f/study-frontend/frontend-notes/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/f/study-frontend/frontend-notes/node_modules/needle/bin/node_modules:/mnt/f/study-frontend/frontend-notes/node_modules/needle/node_modules:/mnt/f/study-frontend/frontend-notes/node_modules:/mnt/f/study-frontend/node_modules:/mnt/f/node_modules:/mnt/f/study-frontend/frontend-notes/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../needle/bin/needle" "$@"
else
  exec node  "$basedir/../needle/bin/needle" "$@"
fi
